pipeline {
    agent any

    tools {
        nodejs('NodeJS')
    }

    environment {
        SCANNER_HOME = tool 'SonarQubeScanner'
        NEXUS_VERSION = "nexus3"
        NEXUS_PROTOCOL = "http"
        NODEJS_HOME = tool name: 'NodeJS' // Assumes NodeJS is configured in Jenkins tools
        PATH = "${NODEJS_HOME}/bin:${env.PATH}"
        SONARQUBE_SERVER = 'SonarQube'  // Name configured for SonarQube in Jenkins
        NEXUS_URL = 'localhost:8081' // Nexus URL
        NEXUS_REPO = 'todo-host'
        NEXUS_CREDENTIALS_ID = 'npm-nexus-credentials' // Jenkins credentials ID for Nexus
    }


    stages {
        stage('Run Background Process') {
    steps {
        script {
            if (isUnix()) {
                echo 'shs'
                sh 'nohup your_command &'
            } else {
                echo 'bats'
                powershell 'start /B your_command'
            }
        }
    }
}
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Install Dependencies') {
            steps {
                bat 'npm install'
            }
        }

        stage('Build') {
            steps {
                withCredentials([file(credentialsId: 'npm-nexus-credentials', variable: 'mynpmrc')]) {
                    echo 'Building...'
                    bat 'npm install --userconfig $mynpmrc --registry http://localhost:8081/repository/todo-host --loglevel verbose'
                }
            }
        }

        stage('SonarQube Analysis') {
            steps {
                script {
                    withSonarQubeEnv('SonarQube') {
                        bat """${SCANNER_HOME}/bin/sonar-scanner -Dsonar.host.url=http://localhost:9000/ \
                        -Dsonar.token=squ_79ad5d3f6a124046c489b678f687a3368c6c154f \
                        -Dsonar.projectName="Todo_API" \
                        -Dsonar.exclusions=**/node_modules/** \
                        -Dsonar.projectKey=Todo_API"""
                    }
                }
            }
        }

        stage('Quality Gate') {
            steps {
                script {
                    sleep(time: 20, unit: 'SECONDS') // Sleep to wait for the status to update
                    def qualityGate = waitForQualityGate()
                    if (qualityGate.status == 'IN_PROGRESS') {
                        sleep(time: 20, unit: 'SECONDS') // Sleep to wait for the status to update
                        error "Quality Gate is still in progress. Retrying..."
                    }

                    if (qualityGate.status != 'OK') {
                        error "Quality Gate failed: ${qualityGate.status}"
                    }
                    else {
                        echo "Quality Gate passed: ${qualityGate.status}"
                    }
                }
            }
        }


        stage('Publibat to Nexus') {
            steps {
                withCredentials([file(credentialsId: 'npm-nexus-credentials', variable: 'mynpmrc')]) {
                    echo 'Publibating to Nexus...'
                    bat 'npm publibat --userconfig $mynpmrc --loglevel verbose'
                }
            }
        }
    }

    post {
        success {
            echo 'Pipeline completed successfully!'
        }
        failure {
            echo 'Pipeline failed.'
        }
    }
}
