pipeline {
    agent any

    tools {
        nodejs 'NodeJS'
    }

    environment {
        NODEJS_HOME = tool name: 'NodeJS'
        PATH = "${NODEJS_HOME}/bin:${env.PATH}"
    }

    stages {
        stage('Debug PATH') {
            steps {
                echo "PATH: ${env.PATH}"
            }
        }

        stage('Install Dependencies') {
            steps {
                bat 'cmd /c npm install'
            }
        }

        stage('Debug Tools') {
            steps {
                bat 'node --version'
                bat 'npm --version'
            }
        }
    }

    post {
        success {
            echo 'Pipeline completed successfully!'
        }
        failure {
            echo 'Pipeline failed.'
        }
    }
}
